// Simple translation manager
class SimpleI18n {
  constructor() {
    this.currentLang = this.detectLanguage();
    this.resources = {
      en: enTranslations,
      de: deTranslations,
      tr: trTranslations
    };
    console.log('SimpleI18n initialized with lang:', this.currentLang);
    console.log('Resources loaded:', Object.keys(this.resources));
  }

  detectLanguage() {
    // Check URL first for legal pages
    const currentPath = window.location.pathname;
    if (currentPath.includes('-de.html')) return 'de';
    if (currentPath.includes('-en.html')) return 'en';
    if (currentPath.includes('-tr.html')) return 'tr';
    
    // Check localStorage
    const savedLang = localStorage.getItem('akkistech-language');
    if (savedLang && ['en', 'de', 'tr'].includes(savedLang)) return savedLang;

    // Check browser language
    const browserLang = navigator.language.toLowerCase();
    if (browserLang.startsWith('de')) return 'de';
    if (browserLang.startsWith('tr')) return 'tr';
    return 'en';
  }

  get language() {
    return this.currentLang;
  }

  t(key, options = {}) {
    const keys = key.split('.');
    let value = this.resources[this.currentLang];
    
    if (!value) {
      console.warn(`No resources for language: ${this.currentLang}`);
      return key;
    }
    
    for (const k of keys) {
      if (value && typeof value === 'object' && value.hasOwnProperty(k)) {
        value = value[k];
      } else {
        console.warn(`Translation key not found: ${key} (looking for: ${k} in ${JSON.stringify(Object.keys(value || {}))})`);
        return key; // Return key if translation not found
      }
    }
    
    return (typeof value === 'string') ? value : key;
  }

  changeLanguage(lang) {
    if (['en', 'de', 'tr'].includes(lang)) {
      this.currentLang = lang;
      localStorage.setItem('akkistech-language', lang);
      return Promise.resolve();
    }
    return Promise.reject(new Error('Invalid language'));
  }

  hasResourceBundle(lang, namespace) {
    return this.resources[lang] !== undefined;
  }
}

// Create singleton instance
const i18next = new SimpleI18n();

export default i18next;
